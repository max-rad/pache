mixin catalog-card(data)
  .catalog-card(data-card)&attributes(attributes)
    a.catalog-card__link(href="#")
    .catalog-card__image-wrapper(data-element-size)
      .catalog-card__image-slides
        .catalog-card__image-slide(style={"background-image " : "url(../img/content/goods/image-1.png);"})
      .catalog-card__image(style={"background-image " : "url(../img/content/goods/image-1.png);"})
      //- .catalog-card__slider.swiper(data-swiper="catalog-card")
      //-   .catalog-card__slides.swiper-wrapper
      //-     .catalog-card__slide.swiper-slide
      //-       .catalog-card__image-wrapper(data-element-size)
      //-         +img("content/goods", data.image.src, data.image.format, data.image.width, data.image.height, data.image.alt)
      //-     .catalog-card__slide.swiper-slide
      //-       .catalog-card__image-wrapper(data-element-size)
      //-         +img("content/goods", data.image.src, data.image.format, data.image.width, data.image.height, data.image.alt)
    .catalog-card__info
      .catalog-card__menu(data-card-menu)
        +size(data.sizes).catalog-card__size.size--card
        +color(data.colors).color--card
        .catalog-card__button-wrapper
          button(type="button" data-open-modal="add-to-basket").btn-reset.catalog-card__button
            +icon("icon-basket", 28, 28)
            | Купить
      .catalog-card__title-wrapper(data-card-title)
        .catalog-card__title!=data.title
        .catalog-card__price-wrapper
          p.catalog-card__old-price 1000
          p.catalog-card__price!=data.price



