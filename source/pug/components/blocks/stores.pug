                          if (subitem.icon)
                            span.stores__crown
                              +icon(subitem.icon.name, subitem.icon.width, subitem.icon.height)
                        .stores__info
                          p!=subitem.address
                          p!=subitem.phone
                          if (subitem.info)
                            p!=subitem.info
                          p!=subitem.time
          .stores__map(data-map)
            .stores__slider.swiper(data-swiper="map")
