mixin custom-input(options = {})
  - const inputLabel = options.label ? options.label : false
  - const inputType = options.type ? options.type : false
  - const inputName = options.name ? options.name : false
  - const inputPlaceholder = options.placeholder ? options.placeholder : false

  - const icon = options.icon ? options.icon : false
  - const error = options.error ? options.error : false


  .custom-input(class={"custom-input--icon" : icon})&attributes(attributes)
    label
      if (inputLabel)
        span.custom-input__label!=inputLabel
      input(type=inputType name=inputName placeholder=inputPlaceholder)
      if (icon)
        span.custom-input__icon
          +icon(icon.name, icon.width, icon.height)
      if (error)
        span.custom-input__error Неверная цена сертификата!
